.histories-container {
  width: 750rpx;
  min-height: 100vh;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  background-color: #ffffff;
}

.history-item {
  width: 375rpx;
  height: 284rpx;
  padding: 5rpx;
  box-sizing: border-box;
}

.history-item-img {
  width: 100%;
  height: 100%;
  border-width: 1px;
  border-style: solid;
  border-color: #f0f0f0;
}

.no-history-tips {
  width: 100%;
  margin-top: 10px;
  text-align: center;
}